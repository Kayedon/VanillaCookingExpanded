<Defs>  


<ThingDef ParentName="RoughPlantBase">
    <defName>VCE_RawSugar</defName>
    <label>sugar</label>
    <description>Simple crystalline cane sugar, adds a much desired sweetness. While sugar is good on the tongue, it is not so good on the kidneys.</description>
    <graphicData>
      <texPath>Things/Items/Condiments/VCE_Sugar</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.9</MarketValue>
	  <Nutrition>1</Nutrition>
      <Flammability>1.3</Flammability>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>VCE_Condiments</li>
    </thingCategories>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
	  <specialThoughtAsIngredient>VCE_ConsumedSugar</specialThoughtAsIngredient>
    </ingestible>
  </ThingDef>
  
