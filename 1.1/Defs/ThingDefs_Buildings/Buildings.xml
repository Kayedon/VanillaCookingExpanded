<?xml version="1.0" encoding="utf-8" ?>
<Defs> 

	<ThingDef ParentName="BuildingBase">
		<defName>VCE_ElectricPot</defName>
		<label>electric pot</label>
		<description>An electric pot, also called a thermo pot, is a small appliance used for boiling water and maintaining it at a constant temperature. It is typically used to provide an immediate source of hot water for soup making. Ingredients are submerged in the water and left cooking over an extended period, enriching the flavour of the soup.</description>
		<thingClass>VanillaCookingExpanded.Building_ElectricPot</thingClass>
		<graphicData>
			<texPath>Things/Buildings/VCE_Pot</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.3,1.3)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>			
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.5</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>800</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>VCE_SoupCooking</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>false</shortCircuitInRain>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>

		</comps>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>VCE_Grill</defName>
		<label>grill</label>
		<description>A grill is a device that cooks food by applying heat from below.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Buildings/VCE_Grill</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.3,1.3)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>			
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.5</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>800</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<inspectorTabs>
			<li>ITab_Bills</li>

		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<sowTag>SupportPlantsOnly</sowTag>
			<canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
			<ai_chillDestination>false</ai_chillDestination>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>VCE_Grilling</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>false</shortCircuitInRain>
				<basePowerConsumption>75</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<li>
				<compClass>CompReportWorkSpeed</compClass>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_ReportWorkSpeedPenalties</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>





</Defs>
