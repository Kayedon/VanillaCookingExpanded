<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef>
		<defName>VCE_AgaveNectar</defName>
		<label>make agave nectar</label>
		<description>Create agave nectar from agave. Agave nectar is a thin and semi-sweet nectar, known for its healing and anti-inflammatory properties.</description>
		<jobString>Making agave nectar.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>200</workAmount>
		<recipeUsers>
			<li>VCE_CondimentPrepTable</li>	  
		</recipeUsers>	
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawAgave</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawAgave</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<VCE_AgaveNectar>5</VCE_AgaveNectar>
		</products>
		<researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
